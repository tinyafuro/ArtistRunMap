<% provide(:title, "Edit place") %>
	
<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<!-- 戻るボタン -->
		<%= link_to "戻る", @place, class: "btn btn-sm btn-primary" %>
		<h1>Update your place</h1>

    <%= form_for(@place) do |f| %>
      <%= render 'shared/error_messages', object: f.object%>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

			<%= f.label :picture %>
    	<p><%= image_tag @place.picture.url if @place.picture? %></p>
			<span class="picture">
    		<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  		</span>

      <%= f.submit "Update changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @place.user %>
			<p><%= @place.user.name %></p>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>

  </div>
</div>